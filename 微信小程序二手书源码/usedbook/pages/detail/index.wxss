.container {
}

.banner {
    height: 180px;
    overflow: hidden;
}

.swiper image {
    width: 100%;
    max-height: 100%;
}

.item-status {
    left: 70%;
}

.detail-box {
    padding: 20rpx 20rpx 0;
    position: relative;
}

.detail-title {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 10rpx;
}

.detail-sub {
    font-size: 12px;
    color: #aaa;
    padding-bottom: 10rpx;
}

.detail-sub text {
    margin-right: 20rpx;
}

.detail-text {
    border-top: 1px dashed #f2f2f2;
    padding-top: 15rpx;
    font-size: 14px;
    color: #888;
    margin-bottom: 15rpx;
    line-height: 20px;
}

.vt-md {
    vertical-align: middle;
}

.item-footer {
    padding: 10px 10px 6px;
}

.field-item {
    font-size: 14px;
    line-height: 32px;
    border-top: 1px solid #f2f2f2;
    color: #888;
    position: relative;
}

.detail-img {
    width: 100%;
    display: block;
    margin-bottom: 20rpx;
}

.margin-md {
    margin-top: 15rpx;
}

.ft-btn {
    display: inline-block;
    padding: 0;
    color: #aaa;
    background: #fff;
    font-size: 12px;
    line-height: 14px;
    margin-left: 20rpx;
}

.ft-btn text {
    margin-right: 8rpx;
}

.seller-panel {
    padding: 10rpx 0;
    background: #fff;
    border-radius: 10px;
    margin-bottom: 20rpx;
}

.middle-panel {
    background: #fff;
    padding: 20rpx 0;
    text-align: center;
    color: #aaa;
    font-size: 14px;
    margin-bottom: 20rpx;
}

.md-btn {
    padding: 5rpx 10rpx;
    color: #fff;
    background: #f40;
    font-size: 12px;
    line-height: 20px;
    border-radius: 10rpx;
    float: right;
}

.like-btn {
    display: inline-block;
    padding: 5rpx 10rpx;
    color: #666;
    background: transparent;
    font-size: 12px;
    line-height: 20px;
    margin: 0 20rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
}

.like-btn text {
    margin-right: 8rpx;
    vertical-align: middle;
}

.message-title {
    text-align: center;
    font-size: 16px;
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.no-message {
    text-align: center;
    color: #666;
    padding: 20rpx 0;
    background: #fff;
}

.zan-btn {
    display: inline-block;
    padding: 10rpx 20rpx;
    color: #fff;
    background: #ff4444;
    font-size: 14px;
    line-height: 1.3;
}

.bt-btn {
    padding: 0;
    color: #aaa;
    background: #fff;
    font-size: 12px;
    line-height: 80rpx;
}

.bg-yellow {
    background: #F4D000!important;
}

.msg-panel {
}

.msg-img {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 15rpx;
}

.reply {
    border-left: 2px solid #f60;
    padding-left: 10rpx;
    color: #aaa;
    font-size: 14px;
    margin-top: 15rpx;
}

.message-top {
    padding: 10px;
    border-bottom: 1px dashed #f2f2f2;
}

.time-right {
    float: right;
    font-size: 12px;
    color: #aaa;
    padding-top: 18rpx;
}

.message-content {
    padding: 20rpx 30rpx;
}

.message-footer {
    border-top: 1px dashed #f2f2f2;
    padding: 5px 10px;
}

.message-item {
    margin-bottom: 10rpx;
    background: #fff;
    box-shadow: 0 0.05rem 0.1rem rgba(0,0,0,0.3);
}

.bottom-bar {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    padding-left: 20rpx;
    font-size: 14px;
    color: #999;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9;
    box-sizing: border-box;
    border-top: 1px solid #eee;
}

.bt-price {
    color: #f44;
}

.bottom-bar .zan-btn {
    border-radius: 0;
    line-height: 80rpx;
    padding: 0 30rpx;
    background: #F60;
}

.order-info {
    margin-bottom: 20rpx;
    width: 100%;
    overflow: hidden;
}

.order-title {
    font-size: 14px;
    color: #aaa;
    padding: 20rpx 20rpx 10rpx;
}

.mask {
    z-index: 99;
}

.video-box {
    position: relative;
    max-height: 430rpx;
    overflow: hidden;
    margin-bottom: 20px;
}

.play-mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.4);
    text-align: center;
    line-height: 430rpx;
    z-index: 8;
}

.play-mask .iconfont {
    font-size: 100rpx;
    color: #fff;
}

.item-pop {
    position: fixed;
    left: 0;
    right: 0;
    top: 30%;
}

.item-pop video {
    width: auto;
    max-width: 100%;
    display: block;
}

.report {
    bottom: 300rpx;
    font-size: 12px;
}

.word-break {
    word-break: break-all;
}

.set-top {
    bottom: 310rpx;
    font-size: 12px;
}

.notice-swiper {
    padding: 20rpx;
    height: 40rpx;
    background: #fff;
    margin: 20rpx 0;
}

.notice-icon {
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin-right: 10rpx;
}

.notice {
    width: 650rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 14px;
    color: #999;
    float: right;
}

.notice-list {
    background: #fff;
    padding: 0 20rpx;
    margin: 20rpx 0;
}

.notice-item {
    font-size: 14px;
    color: #888;
    padding: 16rpx 0;
    border-bottom: 1px solid #f2f2f2;
}

.guide-box {
    position: fixed;
    padding-right: 20rpx;
    right: 10px;
    top: 0;
    z-index: 9999;
}

.arrow {
    float: right;
    margin-right: 110rpx;
    margin-bottom: 15px;
}

.arrow .iconfont {
    font-size: 50px;
    color: #fff;
}

.guide-text {
    float: right;
    color: #fff;
    font-size: 16px;
    line-height: 24px;
}